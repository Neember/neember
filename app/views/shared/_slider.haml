.layer_slider
  #layerslider-container-fw
    #layerslider{:style => "width: 100%; height: 400px; margin: 0px auto; "}
      / Real Feedback
      .ls-layer.real-feedback{:style=>"transition3d:all;transition2d:all;background-color:#d7df32;slidedelay:6000;"}
        - users.each do |user|
          %img.real-users.ls-s-1{:alt=>"Real Users Feedbacks",:src=>"/sliders/users/#{user.image_file}",:style=>"top:#{user.top};left:#{user.left};delayin:#{user.delayin};slidedirection:#{user.slidedirection};slideoutdirection:bottom;durationin:1000;durationout:1000;"}
        
        %img.circle-bkgrd.ls-s-1{:alt=>"Circle Background",:src=>"/sliders/circle-bkgrd.gif",:style=>"top:50px;left:600px;slidedirection:bottom;slideoutdirection:bottom;durationin:1000;durationout:1000;delayin:2000"}
        %span.build-text.ls-s-1{:style=>"top:200px;left:650px;slidedirection:bottom;slideoutdirection:bottom;durationin:2000;durationout:1000;delayin:2000"}
          BUILD WHAT
        %span.think-text.ls-s-1{:style=>"top:250px;left:650px;slidedirection:bottom;slideoutdirection:bottom;durationin:2000;durationout:1000;delayin:2000"}
          YOU THINK
        %span.users-text.ls-s-1{:style=>"top:290px;left:650px;slidedirection:bottom;slideoutdirection:bottom;durationin:2000;durationout:1000;delayin:2000"}
          YOUR USERS NEED
        %span.strikethrough.ls-s-1{:style=>"top:270px;left:650px;slidedirection:right;slideoutdirection:bottom;delayin:2000;durationin:500;durationout:500;delayin:3500"}
